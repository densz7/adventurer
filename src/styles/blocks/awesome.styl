.awesome
	margin-top 50px
	min-height 280px

	&__client
		margin-top 48px
		margin-left 55px
		padding-left 43px
		height 45px
		line-height 28px
		font-size 25px
		background-repeat no-repeat
		background-position: 0 0
	
	@media (max-width: $screen-xs-max)
		padding-bottom 40px

		&__client
			margin-left auto
			margin-right auto
			display table
	
	@media (min-width: $screen-sm-min) and (max-width: $screen-sm-max)
		&__client
			margin-left 0