.counter-block
	padding-top 105px
	height 250px
	font-family 'Roboto Condensed', sans-serif;
	color #fff
	background-color: rgba($main-color, .30)
	background-repeat no-repeat
	background-position: center 40px
	transition all .35s linear
	
	&__number
		font-size 40px
		font-weight 600
		text-transform uppercase
	
	&__desk
		display block
		font-size 14px
		font-weight normal
		text-transform uppercase
		letter-spacing 5px
	
	&:hover
		transform scale(1.2)