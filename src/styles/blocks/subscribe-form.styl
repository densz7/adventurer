.subscribe-form
	
	&__text
		padding-left 20px
		float left
		width 80%
		height 50px
		line-height 50px
		font-size 16px
		background-color: #f0f1f3
		border none
		border-radius 5px 0 0 5px
		outline none
	
	&__submit
		float left
		width 60px
		height 50px
		background-color: $main-color
		border none
		outline none
		background-image url('../../images/subscribe/subscribe__submit-icon.png')
		background-repeat no-repeat
		background-position: center center
		border-radius 0 5px 5px 0
	
	&::after
		content ''
		display table
		clear both
	
	@media (max-width: $screen-xs-max)
		max-width 295px
		
		&__text
			width 70%