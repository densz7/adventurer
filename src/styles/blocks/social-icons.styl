.social-icons
	margin-top 40px
	font-size 0
	
	&--footer
		margin-top 3px
		margin-right -35px
		text-align right

	&__icon
		margin-right 5px
		display inline-block
		width 45px
		height @width
		line-height @width
		font-size 16px
		color $color
		text-align center
		background-color #fff
	
		&--footer
			margin-top 3px
			margin-right 20px
			display inline
			height auto
			line-height 1
			background-color transparent
			color #737373