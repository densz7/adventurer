.progress-bar
	position relative
	width 100%
	height 30px
	line-height 30px
	background-color #f2f2f2
	border 1px solid rgba(#8a8a8a, .34)
	border-radius 2px
	
	&::after
		content attr(data-text)
		padding-left 20px
		display block
		position absolute
		top 0
		left 0
		height 100%
		color #fff
		background-color $main-color
	
	&--web::after
		width 80%
	
	&--html::after
		width 60%
	
	&--design::after
		width 75%
	
	&--wordpress::after
		width 90%
	
	&--joomla::after
		width 50%
	
	&--php::after
		width 85%
	

	@media (max-width: $screen-xs-max)
		&--web
			margin-top 45px