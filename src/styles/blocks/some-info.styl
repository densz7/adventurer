.some-info
	margin-left -13px
	padding-top 50px
	min-height 350px
	background-color: #151515
	
	&__logo
		margin-left -15px
	
	&__text
		margin-top 25px
		font-size 14px
		color #ccc
	
	&__features
	&__tags
	&__posts
		margin-top 6px
		margin-left -15px
		font-size 21px
		color #fff
	
	&__list
		margin-top 43px
		padding 0
		color #ccc
		list-style none
	
	&__item
		margin-bottom 30px
		padding-left 25px
		background-image url('../../images/some-info/some-info__item-icon.png')
		background-repeat no-repeat
		background-position: 0 0
	
	&__tags-list
		margin-top 43px
		padding 0
		font-size 0
	
	&__tag-item
		margin-right 5px
		margin-bottom 5px
		padding 5px
		display inline-block
		font-size 14px
		text-transform uppercase
		font-weight 300
		color #fff
		background-color $main-color
	
	&__posts-list
		margin-top 43px
		width 280px
		padding 0
		font-size 0
	
	&__post-item
		margin-right 10px
		margin-bottom 10px
		display inline-block
		width 60px
		height @width
		
		