.header
	position relative
	min-height 81px
	
	&__logo
		margin-top 17px
		margin-left -30px
			
	&__menu
		margin-top 32px
		margin-left -25px
	
	&__button
		position relative
		top 3px
		display inline-block
		width 33px
		font-size 30px
		color $color
		text-align center
		z-index 10
	
	&__close
		position absolute
		top 0
		left 5px
		opacity 0
		transition all .35s ease
	
	&__show
		transition all .35s ease