.offer-container
	margin-top 50px
	padding-left 110px
	color $color
	text-align left
	
	&__icon
		margin-top 4px
		margin-right 30px
		float left
		height 80px
		width 80px
		background-color $main-color
		background-repeat no-repeat
		background-position: center center
		transition all .35s ease
		
		&:hover
			transform scale(1.3)
	
	&__title
		font-size 25px
		font-weight 600
		text-transform uppercase
	
	&__text
		margin-top 25px
		font-size 18px
		font-weight 300
	
	@media (max-width: $screen-xs-max)
		padding-left 0
		
		&__icon
			margin 0 auto
			float none
		
		&__title
		&__text
			text-align center
	
	@media (min-width: $screen-sm-min) and (max-width: $screen-sm-max)
	
		padding-left 0

		&__icon
			margin 0 auto
			float none
		
		&__title
		&__text
			text-align center
	
	@media (min-width: $screen-md-min) and (max-width: $screen-md-max)
	
		padding-left 0

		&__icon
			margin 0 auto
			float none
		
		&__title
		&__text
			text-align center
	