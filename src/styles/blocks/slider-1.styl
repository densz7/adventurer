.slider-1
	font-family 'Open Sans', sans-serif;
	color #fff
	
	&__title
		font-size 90px
		font-weight 800
		text-transform uppercase
		
		&--size
			font-size 60px
	
	&__text
		font-size 14px
		font-weight 600
		text-transform uppercase
		
		&--size
			font-size 18px
			
	@media (max-width: 599px)

		&.owl-theme .owl-controls .owl-buttons
			display none
			
		&__title
			font-size 30px
		
			&--size
				font-size 30px
		
		&__text--size
			font-size 17px

	@media (min-width: 600px) and (max-width: $screen-xs-max)
		
		&.owl-theme .owl-controls .owl-buttons .owl-prev
			font-size 57px
			left -10px
		
		&.owl-theme .owl-controls .owl-buttons .owl-next
			font-size 57px
			right -10px
				
		&__title
			font-size 50px
		
			&--size
				font-size 36px
		
		&__text--size
			font-size 18px
			
	@media (min-width: $screen-sm-min) and (max-width: $screen-sm-max)
	
		&.owl-theme .owl-controls .owl-buttons .owl-prev
			font-size 57px
			left -5px
		
		&.owl-theme .owl-controls .owl-buttons .owl-next
			font-size 57px
			right -5px
		
		&__title
			font-size 70px
		
			&--size
				font-size 40px
		
		&__text--size
			font-size 17px
	
	@media (min-width: $screen-md-min) and (max-width: $screen-md-max)
		&__title
			font-size 82px
		
			&--size
				font-size 50px
			